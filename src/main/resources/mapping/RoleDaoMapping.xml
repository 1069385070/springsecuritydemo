<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">  
<mapper namespace="com.study.dao.RoleDao">  

	<resultMap type="com.study.model.Role" id="roleMapper" autoMapping="true">
		<id column="id" property="id"/>
		<collection property="resources" ofType="com.study.model.Resources" autoMapping="true">
		</collection>
	</resultMap>

	<select id="findAllRolesWithResources" resultMap="roleMapper">
		SELECT ro.id,ro.roleKey,ro.roleDesc,re.resUrl FROM t_role ro LEFT JOIN t_role_resources rr
		ON ro.id = rr.roleId
		LEFT JOIN t_resources re 
		ON rr.resourcesId = re.id
	</select>
	
	<select id="queryRoleListWithUser" parameterType="int" resultType="com.study.model.URole">
		SELECT r.id,r.roleDesc,r.roleKey,
		(CASE WHEN (SELECT ur.roleId FROM t_user_role ur WHERE ur.userId= #{id} AND ur.roleId = r.id) THEN 1 ELSE 0 END) AS selected 
		FROM t_role r 
	</select>
	
	<select id="queryAll" parameterType="com.study.model.Role" resultType="com.study.model.Role">
		SELECT id,roleDesc,roleKey FROM t_role where 1 = 1
		ORDER BY id ASC
	</select>
	
	<delete id="deleteRoleResources" parameterType="int">
		DELETE FROM t_role_resources WHERE roleId =#{id}
	</delete>
	
	<insert id="addRoleResources" parameterType="com.study.model.RoleResources">
		INSERT INTO t_role_resources(roleId,resourcesId) VALUES (#{roleId},#{resourcesId})
	</insert>
	
	<insert id="addEntity" parameterType="com.study.model.Role">
		INSERT INTO t_role(roleDesc,roleKey) VALUES (#{roleDesc},#{roleKey})
	</insert>
	
	<delete id="deleteEntity" parameterType="int">
		DELETE FROM t_role WHERE id = #{id}
	</delete>
</mapper> 